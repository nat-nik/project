let keywords = ["кларнет", "как звучит флейта"];
let btn = document.getElementsByClassName("button mini-suggest__button button_theme_search button_size_search i-bem button_js_inited")[0];
let links = document.links;
let keyword = keywords[getRandom(0,keywords.length)];
let input = document.getElementById("text");
if (input!=null){
 input.value = keyword;
 }

if (btn!==undefined){
    btn.click();
}else{

    for (let i=0; i<links.length; i++) {
        if (links[i].href.includes('https://xn----7sbab5aqcbiddtdj1e1g.xn--p1ai/musical_instruments/')){
            let link = links[i];
            link.click();
            console.log("Нашел строку" + links[i]);
            break;
        }
    }
}
function getRandom(min, max){
    return Math.floor(Math.random()*(max-min)+min)
}
